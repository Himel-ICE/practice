
@{
    Layout = null;
}
@model practice.Models.Account

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500&display=swap" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            font-family: 'Jost', sans-serif;
            background: #b8bbbc6c;
        }

        .main {
            margin-top: -100px;
            width: 350px;
            height: 300px;
            justify-content: center;
            display: block;
            background: red;
            overflow: hidden;
            background: url("https://doc-08-2c-docs.googleusercontent.com/docs/securesc/68c90smiglihng9534mvqmq1946dmis5/fo0picsp1nhiucmc0l25s29respgpr4j/1631524275000/03522360960922298374/03522360960922298374/1Sx0jhdpEpnNIydS4rnN4kHSJtU1EyWka?e=view&authuser=0&nonce=gcrocepgbb17m&user=03522360960922298374&hash=tfhgbs86ka6divo3llbvp93mg4csvb38") no-repeat center/ cover;
            border-radius: 10px;
            box-shadow: 5px 20px 50px #383737;
        }

        .login {
            padding-top: 50px;
            padding-bottom: 50px;
        }

        .login-input input {
            width: 60%;
            height: 10px;
            background: #e0dede;
            justify-content: center;
            display: flex;
            margin: 20px auto;
            padding: 12px;
            border: 1px solid;
            outline: none;
            border-radius: 3px;
        }

        .input-btn input {
            width: 60%;
            height: 40px;
            margin: 10px auto 50px;
            justify-content: center;
            display: block;
            color: #fff;
            background: #573b8a;
            font-size: 1em;
            font-weight: bold;
            margin-top: 30px;
            outline: none;
            border: none;
            border-radius: 5px;
            transition: .2s ease-in;
            cursor: pointer;
        }

            .input-btn input:hover {
                background: #6d44b8;
            }

        .LoginFaildMessage {
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            color: antiquewhite;
        }
    </style>
    <script>
    function ValidateInput()
    {
        if (document.getElementById("textUserName").value == "" || document.getElementById("textPassword").value == "")
        {
            alert('Input invalided')
            return false;
        }
    }
    </script>
</head>
<body>
    <div class="main">
        <div class="login">
            @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
            {
                <div class="login-input">
                    @Html.TextBoxFor(model => model.Name, new { placeholder = "Username", id = "textUserName" })
                </div>
                <div class="login-input">
                    @Html.TextBoxFor(model => model.Password, new { type = "password", placeholder = "Password", id = "textPassword" })
                </div>
                <span id="failedMessage" class="LoginFaildMessage"></span>
                <div class="login-input input-btn">
                    <input type="submit" value="login" onclick="return ValidateInput()">
                </div>
            }
        </div>
    </div>
    <script>
    var OutMessage = "@ViewBag.Message";

    if (OutMessage == "False")
    {
        document.querySelector('.main').style.backgroundColor = "#cc3300";
        document.getElementById('failedMessage').innerHTML = "Wrong UserName or Password";
        document.querySelector('.LoginFaildMessage').style.fontFamily = 'sans-serif';

    }

    </script>
</body>
</html>


