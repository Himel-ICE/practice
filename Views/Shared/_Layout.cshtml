    <script>
        var menu = document.querySelector("#menu")
        var cls = document.querySelector("#close-btn")
        var sideBar = document.querySelector(".side-bar")
        var profile = document.querySelector(".profile")
        var message = document.querySelector("#sms")
        var notice = document.querySelector("#Notification")
        var showProfile = document.querySelector(".own-profile")
        var showMessage = document.querySelector(".sms")
        var showNotice = document.querySelector(".notice")
        var container = document.querySelector(".top-bar")



        menu.addEventListener('click', (e) => {
            sideBar.style.display = "Block";
        });
        cls.addEventListener('click', (e) => {
            sideBar.style.display = "none";
        });

        message.addEventListener('click', (e) => {
            showMessage.style.display = "Block";
            showNotice.style.display = "none";
            showProfile.style.display = "none";
        });

        notice.addEventListener('click', (e) => {
            showNotice.style.display = "Block";
            showMessage.style.display = "none";
            showProfile.style.display = "none";
        });

        profile.addEventListener('click', (e) => {
            showProfile.style.display = "flex";
            showMessage.style.display = "none";
            showNotice.style.display = "none";
        });

        window.addEventListener("click", (e) => {
            if (!message.contains(e.target) && !showMessage.contains(e.target) &&
                !notice.contains(e.target) && !showNotice.contains(e.target) &&
                !profile.contains(e.target) && !showProfile.contains(e.target)) {
                showProfile.style.display = 'none';
                showMessage.style.display = 'none';
                showNotice.style.display = 'none';
            }
        });

    </script>


